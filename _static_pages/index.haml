:javascript
  var iOS = ( navigator.userAgent.match(/(iPad|iPhone|iPod)/i) ? true : false );

  if (!iOS) {
    $('.post_list li').each( function() {
      var $this = $(this),
        $a = $this.find("a"),
        $hint = $this.find(".hint");
      $a.hover(function() {
        $hint.addClass("unhide");
      }, function() {
        $hint.removeClass("unhide");
      });
    });
  };
